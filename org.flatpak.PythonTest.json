{
    "app-id": "org.flatpak.PythonApp",
    "runtime": "org.gnome.Platform",
    "runtime-version": "42",
    "sdk": "org.gnome.Sdk",
    "command": "main-run",
    "finish-args": [
        "--socket=wayland",
        "--device=dri",
        "--share=ipc",
        "--talk-name=org.freedesktop.Flatpak",
        "--system-talk-name=org.freedesktop.UPower",
        "--filesystem=/usr/bin/upower",
        "--persist=/usr/bin/upower",
        "--persist=/usr/bin/"
    ],

    "cleanup": [
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig"
    ],
    "modules": [
        {
            "name": "PythonApp",
            "buildsystem": "meson",
            "builddir": true,
            "sources": [
                {
                    "branch": "main",
                    "type": "git",
                    "url": "https://github.com/Predrag/battery-app.git"
                }
            ]
        }
    ]
}

